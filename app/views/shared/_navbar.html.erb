<% unless usuario_signed_in? %>
<nav>
  <nav class="navbar navbar-expand-lg border-bottom border-2 border-black">
    <div class="container-fluid mx-2">
      <a class="navbar-brand" href="#">
        <%= image_tag("petri_dish.png",width: 40) %>
        MICOLAB
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex flex-row-reverse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item" >
            <a class="btn btn-primary" href=<%= new_usuario_session_path %>>Entrar</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</nav>
<% else %>
  <nav class="navbar align-self-start w-100 navbar-expand-lg bg-info border-start  border-1 border-white" >
    <div class="container-fluid">
      <div class="collapse navbar-collapse d-flex flex-row-reverse mr-3" id="navbarNav">
        <ul class="navbar-nav mr-2">
          <li class="nav-item mr-2" >
            <div class="dropdown">
              <a class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <%= image_tag "user_icon", width: "30", height:"30" %>
              </a>
              <span>Usuario</span>
              <div class="dropdown-menu m-3" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href=<%= usuario_path(session[:usuario_id])%>>Editar</a>
                <%= link_to "Sair",destroy_usuario_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<% end %>