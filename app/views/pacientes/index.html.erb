<div class="container text-center">
  <h4>Pacientes</h4>
  <div class="row">
    <div class="col-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Sexo</th>
            <th scope="col">Cadastro</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @pacientes.each do |paciente| %>
          <tr>
            <td scope="row"><%= paciente.nome_paciente %></td>
            <th><%= paciente.cpf_paciente %></th>
            <td><%= paciente.sexo%></td>
            <td><%= paciente.created_at%></td>
            <td>
                <%= link_to 'Visualizar', paciente_path(paciente), class: 'btn btn-info' %>
                <%= link_to 'Editar', edit_paciente_path(paciente), class: 'btn btn-warning' %>
            </td>
          </tr>
          <% end %>           
        </tbody>
      </table>
    </div>
  </div>
</div>
