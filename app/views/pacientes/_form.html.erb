              <div class="input-group-text">
                <span class="fs-4 bi-person"></span>
              </div>
            </div>
          </div>

          <div class="input-group mb-3 col-5">
            <%= form.email_field :sexo, placeholder: 'Email', class: "form-control" %>
            <div class="input-group-append">
            <div class="input-group-text">
              <span class="fs-4 bi-envelope-at"></span>
            </div>
            </div>  
          </div>
        </div>
