<div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-12">
        <h3 class="text-center">Dados de Usu√°rio</h3>
        <div class="card border-dark justify-content-center">
          <div class="card-body">
            <div class="card-title">
              <h5><%= @usuario.nome%></h5>
            </div>
            <div class="card-body">
              <p class="card-text"><span>Email: </span><%= @usuario.email%></p>
              <p class="card-text"><span>Registro: </span><%= @usuario.registro%></p>
              <p class="card-text"><span>Telefone: </span><%= @usuario.telefone%></p>
              <p class="card-text"><span>Perfil: </span><%= @usuario.perfil%></p>
              <p class="card-text"><span>Ultimo Login: </span><%= @usuario.last_sign_in_at.strftime("%d/%m/%Y") if @usuario.last_sign_in_at.present?%></p>
            </div>
          </div>
        </div>
      </div>
      <%= link_to "Editar", edit_usuario_path(@usuario.id), class:"btn btn-warning text-white mt-3"%>

    </div>    
</div>